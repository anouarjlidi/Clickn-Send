{% extends 'base.html.twig' %}

{% block title %}Customer{% endblock %}

{% block body %}
    <h1>Customer</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ customer.id }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ customer.lastname }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ customer.firstname }}</td>
            </tr>
            <tr>
                <th>Company_adress</th>
                <td>{{ customer.companyAdress }}</td>
            </tr>
            <tr>
                <th>Country_code</th>
                <td>{{ customer.countryCode }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ customer.phone }}</td>
            </tr>
            <tr>
                <th>Mobile</th>
                <td>{{ customer.mobile }}</td>
            </tr>
            <tr>
                <th>Fax</th>
                <td>{{ customer.fax }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ customer.email }}</td>
            </tr>
            <tr>
                <th>Comment</th>
                <td>{{ customer.comment }}</td>
            </tr>
            <tr>
                <th>Pro</th>
                <td>{{ customer.pro ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Company_name</th>
                <td>{{ customer.companyName }}</td>
            </tr>
            <tr>
                <th>Vat_number</th>
                <td>{{ customer.vatNumber }}</td>
            </tr>
            <tr>
                <th>Remise</th>
                <td>{{ customer.remise }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('customer_index') }}">back to list</a>

    <a href="{{ path('customer_edit', {'id': customer.id}) }}">edit</a>

    {{ include('customer/_delete_form.html.twig') }}
{% endblock %}