{% extends 'base.html.twig' %}

{% block title %}Customer index{% endblock %}

{% block body %}
    <h1>Customer index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Lastname</th>
                <th>Firstname</th>
                <th>Company_adress</th>
                <th>Country_code</th>
                <th>Phone</th>
                <th>Mobile</th>
                <th>Fax</th>
                <th>Email</th>
                <th>Comment</th>
                <th>Pro</th>
                <th>Company_name</th>
                <th>Vat_number</th>
                <th>Remise</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for customer in customers %}
            <tr>
                <td>{{ customer.id }}</td>
                <td>{{ customer.lastname }}</td>
                <td>{{ customer.firstname }}</td>
                <td>{{ customer.companyAdress }}</td>
                <td>{{ customer.countryCode }}</td>
                <td>{{ customer.phone }}</td>
                <td>{{ customer.mobile }}</td>
                <td>{{ customer.fax }}</td>
                <td>{{ customer.email }}</td>
                <td>{{ customer.comment }}</td>
                <td>{{ customer.pro ? 'Yes' : 'No' }}</td>
                <td>{{ customer.companyName }}</td>
                <td>{{ customer.vatNumber }}</td>
                <td>{{ customer.remise }}</td>
                <td>
                    <a href="{{ path('customer_show', {'id': customer.id}) }}">show</a>
                    <a href="{{ path('customer_edit', {'id': customer.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="15">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('customer_new') }}">Create new</a>
{% endblock %}