{% extends 'base.html.twig' %}

{% block stylesheet %}
<link rel="stylesheet" href="{{ absolute_url('styles/PDF.css') }}">
{% endblock %}


{% block body %}

<div class="invoice-content">
    <div class="invoice-content-border">

{#         {{dump(invoice)}} #}
        <div class="container-fluid">
            <div class="row">
                <div class="col-4 logo">COUCOU</div>
                <div class="col-2 void"></div>
                <div class="col-6 customer">
                <p> {{invoice.customer.lastname}} {{invoice.customer.firstname}} </p>
                <p> {{invoice.customer.companyAdress}} </p>
                </div>
            </div>
        </div>


        <div class="container-fluid">
            <div class="row purple-box">
                <div class="col-3 logo"></div>
                <div class="col-6 invoice-ref purple-border"><p> {{invoice.status.invoiceStatus}} N°{{invoice.reference}} </p></div>
                <div class="col-3 customer"></div>
            </div>
        </div>

        {% for bobby in invoice.invoiceHasProducts %}

            {{bobby.product.denomination}}
            
        {% endfor %}





        <div class="invoiceHasProducts purple-border">
            <table>
                <thead>
                    <tr>
                        <th colspan="3">Produit</th>
                        <th colspan="2">Quantité</th>
                        <th colspan="1">Remise</th>
                        <th colspan="2">Prix Unitaire</th>
                        <th colspan="1">Taux de TVA</th>
                        <th colspan="3">Total</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>The table body</td>
                        <td>with two columns</td>
                    </tr>
                </tbody>

            </table>
        </div>




        <div class="bank-ref purple-border"></div>

        <div class="company-refs purple-border"></div>


    </div>
</div>

{% endblock %}
