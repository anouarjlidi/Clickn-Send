{% extends 'base.html.twig' %}

{% block stylesheet %}
<link rel="stylesheet" href="{{ asset('styles/PDF.css') }}">
{% endblock %}


{% block body %}

<div class="invoice-content">
    <div class="invoice-content-border">

        <div class="container-fluid ecart">
            <div class="row">
                <div class="col-4 logo">COUCOU</div>
                <div class="col-2 void"></div>
                <div class="col-6 customer">
                <p> {{invoice.customer.lastname}} {{invoice.customer.firstname}} </p>
                <p> {{invoice.customer.companyAdress}} </p>
                </div>
            </div>
        </div>

        <div class="date ecart">
            <p> le {{invoice.date|date('d-m-Y')}} </p>
        </div>


        <div class="container-fluid">
            <div class="row ecart">
                <div class="col-3"></div>
                <div class="col-6 invoice-ref purple-border">
                <p> {{invoice.status.invoiceStatus}} N°{{invoice.reference}} </p>
                </div>
                <div class="col-3"></div>
            </div>
        </div>

        <div class="invoiceHasProducts purple-border">
            <div class="inside-products">
                <div class="container-fluid">
                    <div class="row thead">
                        <div class="col-5 th">Produit</div>
                        <div class="col-1 th">Quantité</div>
                        <div class="col-2 th">Prix Unitaire</div>
                        <div class="col-1 th">TVA</div>
                        <div class="col-2 thd">Total</div>
                    </div>
                    {% for thisOne in invoice.invoiceHasProducts %}
                    <div class="row thead">
                        <div class="col-5 tr">{{thisOne.product.denomination}}</div>
                        <div class="col-1 tr">{{thisOne.quantity|number_format(2, ',', ' ') }}</div>
                        <div class="col-2 tr">{{thisOne.product.price|number_format(2, ',', ' ') }}€</div>
                        <div class="col-1 tr">20,00%</div>
                        <div class="col-2 trd">{{(thisOne.quantity * thisOne.product.price)|number_format(2, ',', ' ') }} €</div>   
                    </div>
                    {% endfor %}
                </div>

            </div>
        </div>




        <div class="bank-ref purple-border"></div>

        <div class="company-refs purple-border"></div>


    </div>
</div>

{% endblock %}
